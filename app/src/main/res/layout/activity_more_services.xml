<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F5F5F5"
    tools:context=".MoreServices">

    <LinearLayout
        android:id="@+id/layout_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/indoscreen"
            android:text="More Services"
            android:textColor="@color/white"
            android:textSize="22sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="14dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/method_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/indoscreen"
                android:text="Method One"
                android:textSize="17sp"
                android:padding="14dp"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Success rate: 7"
            android:fontFamily="@font/indoscreen"
            android:textSize="14sp"
            android:textColor="@android:color/holo_green_light"
            android:layout_margin="5dp"
            android:layout_gravity="end"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/method_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            android:layout_marginTop="30dp"
            app:cardBackgroundColor="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/indoscreen"
                android:text="Method Two"
                android:textSize="17sp"
                android:padding="14dp"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Success rate: 4"
            android:fontFamily="@font/indoscreen"
            android:textSize="14sp"
            android:layout_margin="5dp"
            android:textColor="@android:color/holo_green_light"
            android:layout_gravity="end"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/method_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            android:layout_marginTop="30dp"
            app:cardBackgroundColor="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/indoscreen"
                android:text="Method Three"
                android:textSize="17sp"
                android:padding="14dp"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Success rate: 9"
            android:fontFamily="@font/indoscreen"
            android:textSize="14sp"
            android:layout_margin="5dp"
            android:textColor="@android:color/holo_green_light"
            android:layout_gravity="end"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/method_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            android:layout_marginTop="30dp"
            app:cardBackgroundColor="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/indoscreen"
                android:text="Method Four"
                android:textSize="17sp"
                android:padding="14dp"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Success rate: 6"
            android:fontFamily="@font/indoscreen"
            android:textSize="14sp"
            android:layout_margin="5dp"
            android:textColor="@android:color/holo_green_light"
            android:layout_gravity="end"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"/>

    </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_two"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/toolbars"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorPrimary">

            <ImageView
                android:id="@+id/btnBacks"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:src="@drawable/ic_baseline_arrow_back_24" />

            <TextView
                android:id="@+id/toolbar_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/indoscreen"
                android:text="Method One"
                android:textColor="@color/white"
                android:textSize="22sp" />

        </RelativeLayout>


        <im.delight.android.webview.AdvancedWebView
            android:id="@+id/webview"
            android:layout_below="@+id/toolbars"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <com.victor.loading.rotate.RotateLoading
            app:loading_color="@color/colorPrimary"
            android:id="@+id/rotateloading"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            app:loading_speed="11"
            app:loading_width="5dp" />

    </RelativeLayout>


</LinearLayout>